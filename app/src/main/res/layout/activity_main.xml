<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lemune.calculator_ensf409_lab10.MainActivity"
    android:elevation="@dimen/abc_action_bar_content_inset_material"
    android:background="#ffe7e7">




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/initial_display_layout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/initial_display"
            android:id="@+id/display"
            android:background="#f9caca"

             />




    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/equalslayout"
        android:weightSum="1"
        android:layout_above="@+id/gridLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">


    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="7.87"
        android:id="@+id/gridLayout"
        android:columnCount="7"
        android:rowCount="5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/num1"
            android:background="#f07d7d"
            android:allowUndo="false"
            android:clickable="true"

            android:enabled="true"

            android:layout_marginBottom="@dimen/button_margin"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginTop="@dimen/button_margin"

            android:layout_row="0"
            android:layout_column="0"
            android:onClick="onNumClick" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/num2"
            android:background="#f07d7d"
            android:allowUndo="false"
            android:clickable="true"

            android:layout_marginBottom="@dimen/button_margin"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginTop="@dimen/button_margin"


            android:enabled="true"

            android:layout_row="0"
            android:layout_column="1"
            android:onClick="onNumClick"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/num3"
            android:background="#f07d7d"
            android:allowUndo="false"
            android:clickable="true"

            android:layout_marginBottom="@dimen/button_margin"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginTop="@dimen/button_margin"


            android:enabled="true"


            android:layout_row="0"
            android:layout_column="2"
            android:onClick="onNumClick"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/addition"
            android:background="#f07d7d"
            android:allowUndo="false"
            android:clickable="true"

            android:layout_marginBottom="@dimen/button_margin"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginTop="@dimen/button_margin"



            android:enabled="true"

            android:layout_row="0"
            android:layout_column="3"
            android:onClick="onOpClick"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/num4"
            android:background="#f07d7d"
            android:allowUndo="false"
            android:clickable="true"


            android:layout_marginBottom="@dimen/button_margin"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginTop="@dimen/button_margin"

            android:enabled="true"


            android:layout_row="1"
            android:layout_column="0"
            android:onClick="onNumClick"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/num5"
            android:background="#f07d7d"
            android:allowUndo="false"
            android:clickable="true"


            android:layout_marginBottom="@dimen/button_margin"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginTop="@dimen/button_margin"


            android:enabled="true"

            android:layout_row="1"
            android:layout_column="1"
            android:onClick="onNumClick"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/num6"
            android:background="#f07d7d"
            android:allowUndo="false"
            android:clickable="true"

            android:layout_marginBottom="@dimen/button_margin"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginTop="@dimen/button_margin"


            android:enabled="true"

            android:layout_row="1"
            android:layout_column="2"
            android:onClick="onNumClick"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/subtraction"
            android:background="#f07d7d"
            android:allowUndo="false"
            android:clickable="true"


            android:layout_marginBottom="@dimen/button_margin"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginTop="@dimen/button_margin"

            android:enabled="true"

            android:layout_row="1"
            android:layout_column="3"
            android:onClick="onOpClick"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/num7"
            android:background="#f07d7d"
            android:allowUndo="false"
            android:clickable="true"


            android:layout_marginBottom="@dimen/button_margin"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginTop="@dimen/button_margin"


            android:enabled="true"


            android:layout_row="3"
            android:layout_column="0"
            android:onClick="onNumClick"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/num8"
            android:background="#f07d7d"
            android:allowUndo="false"
            android:clickable="true"

            android:layout_marginBottom="@dimen/button_margin"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginTop="@dimen/button_margin"


            android:enabled="true"

            android:layout_row="3"
            android:layout_column="1"
            android:onClick="onNumClick"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/num9"
            android:background="#f07d7d"
            android:allowUndo="false"
            android:clickable="true"

            android:layout_marginBottom="@dimen/button_margin"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginTop="@dimen/button_margin"


            android:enabled="true"

            android:layout_row="3"
            android:layout_column="2"
            android:onClick="onNumClick"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:id="@+id/multiplication"
            android:background="#f07d7d"
            android:allowUndo="false"
            android:clickable="true"

            android:layout_marginBottom="@dimen/button_margin"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginTop="@dimen/button_margin"

            android:enabled="true"


            android:layout_row="3"
            android:layout_column="3"
            android:onClick="onOpClick"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/num0"
            android:background="#f07d7d"
            android:allowUndo="false"
            android:clickable="true"

            android:layout_marginBottom="@dimen/button_margin"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginTop="@dimen/button_margin"


            android:enabled="true"

            android:layout_row="4"
            android:layout_column="0"
            android:onClick="onNumClick"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:id="@+id/decimal"
            android:background="#f07d7d"
            android:allowUndo="false"
            android:clickable="true"


            android:layout_marginBottom="@dimen/button_margin"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginTop="@dimen/button_margin"

            android:enabled="true"

            android:layout_row="4"
            android:layout_column="1"
            android:onClick="onNumClick"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="("
            android:id="@+id/l_paren_button"
            android:background="#f07d7d"
            android:allowUndo="false"
            android:clickable="true"
            android:layout_marginBottom="@dimen/button_margin"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginTop="@dimen/button_margin"
            android:enabled="true"
            android:layout_row="4"
            android:layout_column="2"
            android:onClick="onOpClick" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:id="@+id/division"
            android:background="#f07d7d"
            android:allowUndo="false"
            android:clickable="true"

            android:layout_marginBottom="@dimen/button_margin"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginTop="@dimen/button_margin"

            android:enabled="true"

            android:layout_row="4"
            android:layout_column="3"
            android:onClick="onOpClick"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=")"
            android:id="@+id/r_paren_button"
            android:background="#f07d7d"
            android:allowUndo="false"
            android:clickable="true"
            android:layout_marginBottom="@dimen/button_margin"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginTop="@dimen/button_margin"
            android:enabled="true"
            android:layout_row="4"
            android:layout_column="4"
            android:onClick="onOpClick" />


    </GridLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/equal"
        android:background="#f07d7d"
        android:allowUndo="false"
        android:clickable="true"

        android:enabled="true"

        android:onClick="onEqualClick"
        android:layout_above="@+id/equalslayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="54dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/Cancel"
        android:background="#f07d7d"
        android:allowUndo="false"
        android:clickable="true"


        android:enabled="true"

        android:layout_row="4"
        android:layout_column="2"
        android:onClick="onCancelClick"
        android:layout_above="@+id/equalslayout"
        android:layout_alignRight="@+id/equalslayout"
        android:layout_alignEnd="@+id/equalslayout" />

</RelativeLayout>
